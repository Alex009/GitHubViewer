<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubViewer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_github</item>
        <item name="colorPrimaryVariant">#2E79CF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextField.LoginScreen" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/accent_github</item>
        <item name="boxStrokeErrorColor">@color/red_error</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="hintTextColor">@color/accent_github</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/gray</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.GitHubViewer</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_dark</item>
        <item name="android:navigationBarColor">@color/gray_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>